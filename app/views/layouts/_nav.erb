<header>
  <div class="container">
    <%= link_to :root do %>
      <h1 class="app-title">The Guild</h1>
    <%end%>
    <% unless flash.empty? %>
      <div class="text-center">
        <div class="notice text-info">
          <%= notice %>
        </div>
        <div class="alert text-danger">
          <%= alert %>
        </div>
      </div>
    <% end %>
    <nav class="nav justify-content-center">
      <a class="nav-link disabled" href="#">The List</a>
      <%= link_to 'Events', 'http://cortadito.miami', class: 'nav-link', target: '_blank'%>
      <% if current_user %>
        <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'nav-link' %>
      <% else %>
        <%= link_to 'Sign Up', new_user_session_path, class: 'nav-link' %>
      <% end  %>
    </nav>
  </div>
</header>