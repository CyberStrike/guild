<header>
  <div class="container">
    <%= link_to :root do %>
      <h1 class="app-title">The Guild</h1>
    <%end%>
    <% unless flash.empty? %>
      <div class="text-center">
        <div class="notice text-info">
          <%= notice %>
        </div>
        <div class="alert text-danger">
          <%= alert %>
        </div>
      </div>
    <% end %>
    <nav class="nav justify-content-center">
      <a class="nav-link disabled" href="#">The List</a>
      <%= link_to 'Events', '', class: 'nav-link disabled', target: '_blank'%>
      <%= dashboard_sign_up_link(current_user) %>
    </nav>
  </div>
</header>